<?xml version="1.0" encoding="UTF-8"?>
<config>
    <website name="urbania" base_url="https://urbania.pe/">
        <actions>
            <!-- Dos scrolls para asegurar carga completa -->
            <action type="scroll" selector="" optional="true"/>
            <action type="scroll" selector="" optional="true"/>
        </actions>

        <selectors>
            <!-- Contenedor de cada propiedad -->
            <container>div[data-id], a[href*='/inmueble/']</container>

            <!-- L칤mite de propiedades por p치gina -->
            <limit>100</limit>

            <!-- Precio -->
            <precio>div[class*='price'], span[class*='price']</precio>

            <!-- Ubicaci칩n -->
            <ubicacion>h2, div[class*='location'], div[class*='address']</ubicacion>

            <!-- T칤tulo -->
            <titulo>h3, h2</titulo>

            <!-- Caracter칤sticas generales -->
            <caracteristicas>span, li</caracteristicas>

            <!-- 츼rea (m totales exactos) -->
            <area>span.postingMainFeatures-module__posting-main-features-span</area>

            <!-- Dormitorios -->
            <dormitorios>span[class*='bedroom'], span[class*='dorm']</dormitorios>

            <!-- Ba침os -->
            <banos>span[class*='bathroom'], span[class*='ba침o']</banos>

            <!-- Fecha de publicaci칩n -->
            <fecha_publicacion>div.postingCard-module__posting-antiquity-date</fecha_publicacion>

            <!-- URL -->
            <url>a[href*='/inmueble/']</url>
        </selectors>

        <!-- 游대 BLOQUE DE PAGINACI칍N FUNCIONAL -->
        <pagination>
            <!-- Tipo de elemento clickeable -->
            <type>button</type>

            <!-- Selector del bot칩n padre que contiene el SVG de la flecha "siguiente" -->
            <selector>button[class*='paging-module__next'], li[class*='paging-module__next']</selector>

            <!-- N칰mero m치ximo de p치ginas a recorrer -->
            <max_pages>10</max_pages>

            <!-- Indica si se debe hacer scroll durante la paginaci칩n -->
            <scroll>1</scroll>
        </pagination>
    </website>
</config>
